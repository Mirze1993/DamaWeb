@model IEnumerable<Model.Models.AppUser>

@{
    ViewData["Title"] = "UsersIndex";
    Layout = "~/Views/_Layout.cshtml";
    var onlineUsers = DamaWeb.Tools.OnlineUsers.Users;
}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <div class="card card-primary">
                    <div class="card-header">
                        Online Users
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="prosess" class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>Online</th>
                                    <th>Name</th>
                                    <th>Request Game</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Count > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (onlineUsers.Any(x => x.Id == item.Id))
                                                {
                                                    <span class="badge badge-success">+</span>
                                                }
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-primary" data-toggle="ajax-game-request" data-url="/Users/RequestGame/@item.Id">
                                                    Request
                                                </button>
                                            </td>
                                    </tr>
                                }
                                }
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
