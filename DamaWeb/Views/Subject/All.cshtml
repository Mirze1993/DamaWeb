@model List<Subject>
@{
    ViewData["Title"] = "All";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
    <a asp-action="Add" asp-controller="Subject" class="btn btn-danger">
        <i class="fas fa-plus-circle">
            Add
        </i>
    </a><br />
    @if (Model != null)
    {


        <div class="card">
            <div class="card-header">
                All Subject
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table id="AllUsers" class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Edit</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-sm" asp-action="Update" asp-controller="Subject" asp-route-id="@item.Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Update
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Subject" asp-route-id="@item.Id">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>


                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
@section Script{
    <script src="~/dataTables/jquery/jquery.dataTables.min.js"></script>
    <script src="~/dataTables/jquery/dataTables.bootstrap4.min.js"></script>
    <script src="~/dataTables/jquery/dataTables.responsive.min.js"></script>
    <script src="~/bootstrap/alertjs/toastr.min.js"></script>
    <script src="~/customerJS/modal.js"></script>
    <script>
        $(document).ready(function () {
            //Initialize Select2 Elements
            $("#AllUsers").DataTable({
                "responsive": true,
                "autoWidth": false,
                search: false;
            });
        });
    </script>
}
