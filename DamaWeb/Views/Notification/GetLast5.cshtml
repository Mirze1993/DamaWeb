@model List<Notification>
@{

}

@if (Model?.Count > 0)
{
    for (int i = 0; i < Model.Count; i++)
    {

        <a href="@Url.Action("GetNotif", "Notification", new { id = Model[0].Id,type=Model[i].Type })" class="dropdown-item">
            <i class="fas fa-envelope mr-2"></i> @Model[i].Message
            <span class="float-right text-muted text-sm">@Model[i].NoteDate.ToString("yyyy/MM/dd HH:mm:ss")</span>
        </a>

        <div class="dropdown-divider"></div>
    }
}


<a href="#" class="dropdown-item dropdown-footer">See All Messages</a>
