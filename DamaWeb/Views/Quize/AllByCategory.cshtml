@model List<Quize>
@{
    ViewData["Title"] = "AllByCategory";
    Layout = "~/Views/_Layout.cshtml";
}
@section CSS{
    <link href="~/dataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/dataTables/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-4.min.css" rel="stylesheet" />
}
<div class="container-fluid">
    <a asp-action="Add" asp-controller="Quize" class="btn btn-info" asp-route-categoryId="@ViewBag.categoryId">
        <i class="fas fa-plus-circle">
            Add Quize
        </i>
    </a>
    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                All Quize in Category
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table id="AllQuize" class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>A</th>
                            <th>B</th>
                            <th>C</th>
                            <th>D</th>
                            <th>E</th>
                            <th>Answer</th>
                            <th>Answer Descrption</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Question
                                    </td>
                                    <td>
                                        @item.A
                                    </td>
                                    <td>
                                        @item.B
                                    </td>
                                    <td>
                                        @item.C
                                    </td>
                                    <td>
                                        @item.D
                                    </td>
                                    <td>
                                        @item.E
                                    </td>
                                    <td>
                                        @item.Answer
                                    </td>
                                    <td>
                                        @item.AnswerDecrpt
                                    </td>

                                    <td>
                                        <a class="btn btn-outline-info btn-sm" asp-action="Update" asp-controller="Quize"
                                           asp-route-id="@item.Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Update
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-controller="Quize"
                                           asp-route-id="@item.Id" asp-route-categoryId="@item.CategoryId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                        <a class="btn btn-outline-dark btn-sm" asp-action="View" asp-controller="Quize"
                                           asp-route-id="@item.Id" asp-route-categoryId="@item.CategoryId">
                                            <i class="fas fa-eye">
                                            </i>
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    }
</div>
@section Script{
    <script src="~/dataTables/jquery/jquery.dataTables.min.js"></script>
    <script src="~/dataTables/jquery/dataTables.bootstrap4.min.js"></script>
    <script src="~/dataTables/jquery/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            //Initialize Select2 Elements
            $("#AllQuize").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
        });
    </script>
}