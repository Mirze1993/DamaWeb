@model List<UIResultQuize>
@{
    ViewData["Title"] = "Results";
    Layout = "~/Views/_Layout.cshtml";
}

@section CSS{
    <link href="~/dataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/dataTables/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-4.min.css" rel="stylesheet" />
}

<div class="container-fluid">
    <a asp-action="All" asp-controller="StudentGroup" class="btn btn-outline-danger">
        <i class="nav-icon fas fa-arrow-circle-left"></i>
        Back All Group
    </a>

    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                All Results
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table id="AllResult" class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>CategoryName</th>
                            <th>ResultDate</th>
                            <th>TotalTrueAnswer</th>
                            <th>TotalFalseAnswer</th>
                            <th>TotalNoAnswer</th>
                            <th>TotalSecond</th>
                            <th>FalseAnswers</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        @item.ResultDate.ToString("yyyy-MM-dd hh:mm")
                                    </td>
                                    <td>
                                        @item.TotalTrueAnswer
                                    </td>

                                    <td>
                                        @item.TotalFalseAnswer
                                    </td>
                                    <td>
                                        @item.TotalNoAnswer
                                    </td>
                                    <td>
                                        @item.TotalSecond
                                    </td>

                                    <td>
                                        @item.FalseAnswers
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
@section Script{
    <script src="~/dataTables/jquery/jquery.dataTables.min.js"></script>
    <script src="~/dataTables/jquery/dataTables.bootstrap4.min.js"></script>
    <script src="~/dataTables/jquery/dataTables.responsive.min.js"></script>
    <script src="~/bootstrap/alertjs/toastr.min.js"></script>
    <script src="~/customerJS/modal.js"></script>
    <script>
        $(document).ready(function () {
            //Initialize Select2 Elements
            $("#AllResult").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
        });
    </script>
}


