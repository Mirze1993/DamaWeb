@model List<UIStudentTeacher>
@{
    ViewData["Title"] = "WaitApproveFollow";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                All Follow Request
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table id="WaitApprove" class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Student Pohone</th>
                            <th>Approve</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.StudentName
                                    </td>
                                    <td>
                                        @item.StudentPhone
                                    </td>


                                    <td>
                                        <a asp-action="ApproveFollow" asp-controller="Follow" class="btn btn-info" asp-route-id="@item.Id" >
                                            <i class="fas fa-check-circle">
                                                Approve
                                            </i>
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="DeleteFollow" asp-controller="Follow" asp-route-id="@item.Id">
                                            <i class="fas fa-trash">
                                                Delete
                                            </i>                                            
                                        </a>
                                       
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>


